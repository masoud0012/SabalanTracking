@model IEnumerable<SabalanTracking.Models.Formulla>

@{
    ViewData["Title"] = "Details";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">تعریف فرمول جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th></th>
        </tr>
    </thead>
